<% provide :title, 'Sign in' %>
<h1>Sign in</h1>

<%= form_for(:session, url: session_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit "Sign in" %>
  </div>
<% end %>
<%= link_to "Sign up now!", signup_path %>
